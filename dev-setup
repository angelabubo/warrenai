DATABASE SETUP
These are the scripts to prepare the database and initialize the table with values


drop DATABASE if EXISTS db_warrenai;

create DATABASE db_warrenai;

USE db_warrenai;

create table users (
id varchar(36) PRIMARY KEY,
stripeCustomerId varchar(36),
fname varchar(150) NOT NULL,
lname varchar(150),
email varchar(150) UNIQUE,
password TEXT NOT NULL,
default_paymentmethod_id varchar(36),
default_paymentmethod_card_brand varchar(36),
default_paymentmethod_card_last4 varchar(5)
);

create table subscriptions(
id varchar(36) PRIMARY KEY,
stripeCustomerId varchar(36) NOT NULL references users(stripeCustomerId),
current_period_end BIGINT,
status varchar(30),
product_price_id varchar(36),
product_id varchar(36),
latest_invoice_id varchar(36)
);

create table invoices (
id varchar(36) PRIMARY KEY,
invoice_number varchar(36),
stripeCustomerId varchar(36) NOT NULL references users(stripeCustomerId),
created_date BIGINT,
product_description varchar(150),
period_start BIGINT,
period_end BIGINT,
payment_method_brand varchar(36),
payment_method_last4 varchar(5),
total int,
status varchar(30),
payment_intent_id varchar(36),
payment_intent_status varchar(30),
receipt_url TEXT
);

//Test scripts
//JOIN users and subscriptions table then filter
select users.id, users.name, users.email, users.password, users.stripeCustomerId,
subscriptions.status, subscriptions.current_period_end, subscriptions.product_price_id from users
left join subscriptions on (
    users.stripeCustomerId = subscriptions.stripeCustomerId and
    subscriptions.status = 'active')
where users.id = ?
order by subscriptions.current_period_end desc
limit 1

